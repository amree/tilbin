<p id="notice"><%= notice %></p>

<h1>Tils</h1>

<table>
  <thead>
    <tr>
      <th>Notes input</th>
      <th>Notes output</th>
      <th>Is draft</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tils.each do |til| %>
      <tr>
        <td><%= til.notes_input %></td>
        <td><%= til.notes_output %></td>
        <td><%= til.is_draft %></td>
        <td><%= til.published_at %></td>
        <td><%= link_to 'Show', til %></td>
        <td><%= link_to 'Edit', edit_til_path(til) %></td>
        <td><%= link_to 'Destroy', til, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

