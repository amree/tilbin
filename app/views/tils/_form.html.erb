<%= simple_form_for(@til) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title,
    placeholder: "Title for this TIL" %>
  <%= f.input :notes,
    placeholder: "Markdown formatted notes",
    input_html: { rows: 10 } %>

  <%= f.button :submit, "Publish",
    name: "publish",
    value: "Publish",
    class: "btn btn-primary" %>
  <%= f.button :submit,"Save Draft",
    name: "draft",
    value: "Save Draft",
    class: "btn btn-link" %>
<% end %>
