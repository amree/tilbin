<div class="sign-up">
  <div class="sign-up__header">
    <h1>Join Tilbin</h1>
    <p class="sign-up__lead">The best way to store and expand your knowledge daily.</p>
  </div>
  <div class="sign-up__content">
    <div class="sign-up__guides">
      <div class="card">
        <div class="card-header">
          You'll love Tilbin
        </div>
        <div class="card-body">
          <ul>
            <li>Store your TIL</li>
            <li>Explore new knowledge</li>
            <li>Export your data</li>
            <li>Discuss about them</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="sign-up__form">
      <h3>Create your personal account</h3>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :username, required: true, autofocus: true %>
          <%= f.input :name, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <hr>
        <p class="sign-up__agreement">
          By clicking on "Create an account" below, you are agreeing to the Terms of Service and the Privacy Policy.
        </p>
        <hr>

        <div class="form-actions">
          <%= f.button :submit, "Create an account", class: "btn-success-github", data: { disable_with: "Creating account..." } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
