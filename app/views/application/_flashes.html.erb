<% if flash.any? %>
  <div class="flashes">
      <% user_facing_flashes.each do |key, value| -%>
        <div class="alert <%= bootstrap_class_for(key) %>">
          <div class="container">
            <%= value %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
      <% end -%>
  </div>
<% end %>
